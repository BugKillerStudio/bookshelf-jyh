<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/book_old_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please enter the information of the book"
            android:textSize="30sp"
            android:textStyle="bold"

            android:shadowColor="@color/background_main"
            android:shadowRadius="3.0"
            android:shadowDx="10.0"
            android:shadowDy="10.0"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="60dp"
            >
            <TextView
                android:id="@+id/textViewTile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                tools:layout_editor_absoluteX="97dp"
                tools:layout_editor_absoluteY="225dp" />

            <EditText
                android:id="@+id/edittext_shop_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                tools:layout_editor_absoluteX="165dp"
                tools:layout_editor_absoluteY="217dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="60dp"
            >

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                tools:layout_editor_absoluteX="97dp"
                tools:layout_editor_absoluteY="225dp" />

            <EditText
                android:id="@+id/edittext_shop_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="001"
                tools:layout_editor_absoluteX="165dp"
                tools:layout_editor_absoluteY="217dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="60dp"
            >

            <TextView
                android:id="@+id/textViewAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                tools:layout_editor_absoluteX="97dp"
                tools:layout_editor_absoluteY="225dp" />

            <EditText
                android:id="@+id/edittext_shop_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="unknow author"
                tools:layout_editor_absoluteX="165dp"
                tools:layout_editor_absoluteY="217dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="60dp"
            >

            <TextView
                android:id="@+id/textViewPublish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publish"
                tools:layout_editor_absoluteX="97dp"
                tools:layout_editor_absoluteY="225dp" />

            <EditText
                android:id="@+id/edittext_shop_item_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="unknow publish"
                tools:layout_editor_absoluteX="165dp"
                tools:layout_editor_absoluteY="217dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="60dp"
            >

            <TextView
                android:id="@+id/textViewBookshelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bookshelf"
                tools:layout_editor_absoluteX="97dp"
                tools:layout_editor_absoluteY="225dp" />

<!--            <EditText-->
<!--                android:id="@+id/edittext_shop_item_bookshelf"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:ems="10"-->
<!--                android:inputType="textPersonName"-->
<!--                android:text="001"-->
<!--                tools:layout_editor_absoluteX="165dp"-->
<!--                tools:layout_editor_absoluteY="217dp" />-->
            <Spinner
                android:id="@+id/bookshelf_selete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_ok"
                android:layout_marginStart="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ok"
                android:layout_gravity="center"
                ></Button>

            <Button
                android:id="@+id/button_cancel"
                android:layout_marginStart="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cancel"></Button>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>